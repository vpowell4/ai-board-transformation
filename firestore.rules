rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isProjectMember(projectId) {
      let project = get(/databases/$(database)/documents/projects/$(projectId));
      return signedIn() && (
        project.data.createdBy == request.auth.uid ||
        (project.data.teamMembers != null && request.auth.uid in project.data.teamMembers)
      );
    }

    // Users profile documents.
    match /users/{userId} {
      allow read: if signedIn();
      allow create, update: if signedIn() && request.auth.uid == userId;
      allow delete: if false;
    }

    // Existing projects workflow (kept for compatibility with ai-diagnostics-platform).
    match /projects/{projectId} {
      allow read: if signedIn() && (
        resource.data.createdBy == request.auth.uid ||
        (resource.data.teamMembers != null && request.auth.uid in resource.data.teamMembers)
      );
      allow create: if signedIn()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.teamMembers != null
        && request.auth.uid in request.resource.data.teamMembers;
      allow update, delete: if signedIn() && (
        resource.data.createdBy == request.auth.uid ||
        (resource.data.teamMembers != null && request.auth.uid in resource.data.teamMembers)
      ) && request.resource.data.createdBy == resource.data.createdBy;
    }

    match /invites/{inviteId} {
      allow create: if signedIn()
        && request.resource.data.projectId is string
        && request.resource.data.invitedBy == request.auth.uid
        && isProjectMember(request.resource.data.projectId);

      allow read: if signedIn() && (
        resource.data.invitedBy == request.auth.uid ||
        (
          request.auth.token.email != null &&
          resource.data.email is string &&
          resource.data.email.lower() == request.auth.token.email.lower()
        ) ||
        isProjectMember(resource.data.projectId)
      );

      allow update: if signedIn() && (
        resource.data.invitedBy == request.auth.uid ||
        (
          request.auth.token.email != null &&
          resource.data.email is string &&
          resource.data.email.lower() == request.auth.token.email.lower()
        )
      );

      allow delete: if signedIn() && (
        resource.data.invitedBy == request.auth.uid ||
        isProjectMember(resource.data.projectId)
      );
    }

    match /auditLogs/{logId} {
      allow create, read: if signedIn();
      allow update, delete: if false;
    }

    // New simulation sessions for board simulator.
    match /simulationSessions/{sessionId} {
      allow create: if signedIn()
        && request.resource.data.ownerUid == request.auth.uid
        && request.resource.data.roleId is string
        && request.resource.data.sectorId is string
        && request.resource.data.scenarioId is string;

      allow read, update, delete: if signedIn() && resource.data.ownerUid == request.auth.uid;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

